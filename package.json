{
  "name": "istayhome.info",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write '**/*.*'",
    "lint": "prettier --check '**/*.*' && eslint . --ext js,jsx",
    "start": "next start",
    "test": "yarn lint"
  },
  "prettier": {
    "arrowParens": "always"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "16.3.0"
      }
    },
    "plugins": [
      "react",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "warn",
      "react-hooks/rules-of-hooks": "error"
    }
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "2.1.0",
    "@google-cloud/translate": "5.3.0",
    "escape-string-regexp": "2.0.0",
    "lru-cache-fs": "^2.0.1",
    "markdown-to-jsx": "6.11.0",
    "next": "9.3.0",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-select": "3.0.8",
    "tailwindcss": "1.2.0"
  },
  "devDependencies": {
    "autoprefixer": "9.7.4",
    "babel-eslint": "10.1.0",
    "eslint": "6.8.0",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "2.5.0",
    "postcss-import": "12.0.1",
    "prettier": "1.19.1",
    "prettier-plugin-packagejson": "2.0.10",
    "prop-types": "15.7.2"
  },
  "engines": {
    "node": "12.16.1",
    "yarn": "1.22.4"
  },
  "renovate": {
    "extends": [
      "config:js-app"
    ]
  }
}
