{
  "name": "istayhome.info",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write '**/*.*' && eslint . --fix",
    "generateSitemap": "babel-node --presets @babel/preset-env generateSitemap.js",
    "lint": "prettier --check '**/*.*' && eslint . --ext js,jsx",
    "start": "next start",
    "test": "yarn lint"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "16.3.0"
      }
    },
    "plugins": [
      "react",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "warn",
      "react-hooks/rules-of-hooks": "error"
    }
  },
  "dependencies": {
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "@fullhuman/postcss-purgecss": "2.1.2",
    "@google-cloud/translate": "5.3.0",
    "lru-cache-fs": "2.0.1",
    "markdown-to-jsx": "6.11.1",
    "marked": "0.8.2",
    "next": "9.3.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-select": "3.1.0",
    "react-share": "4.1.0",
    "tailwindcss": "1.2.0",
    "turndown": "6.0.0"
  },
  "devDependencies": {
    "@babel/node": "7.8.7",
    "@babel/preset-env": "7.9.5",
    "autoprefixer": "9.7.6",
    "babel-eslint": "10.1.0",
    "eslint": "6.8.0",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "postcss-import": "12.0.1",
    "prettier": "2.0.4",
    "prettier-plugin-packagejson": "2.2.0",
    "prop-types": "15.7.2",
    "sitemap": "6.1.0"
  },
  "engines": {
    "node": "12.16.2",
    "yarn": "1.22.4"
  },
  "renovate": {
    "extends": [
      "config:js-app",
      ":automergePatch",
      ":automergeBranch",
      ":automergeLinters",
      ":automergeTesters",
      ":automergeTypes"
    ],
    "lockFileMaintenance": {
      "enabled": true
    }
  }
}
